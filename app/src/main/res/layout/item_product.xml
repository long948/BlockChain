<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2E315D"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_item_bg"
        android:gravity="center_vertical"
        android:padding="4dp">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_img"
            android:layout_width="137dp"
            android:layout_height="99dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dip" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="沉鱼存储算力 2049U-TR4 "
                android:textColor="#ffd2d9f1"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@mipmap/produ_time"
                android:drawablePadding="2dp"
                android:text="服务期 1年"
                android:textColor="#ffc2cefa"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableLeft="@mipmap/produ_award"
                android:drawablePadding="2dp"
                android:text="算力 1T"
                android:textColor="#ffc2cefa"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450"
                        android:textColor="#ffe95924"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="FIL"
                        android:textColor="#ffe95924"
                        android:textSize="9sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_goumai"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="立即购买"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/bg_goumai2"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv_bug"
                    android:layout_width="87dp"
                    android:layout_height="35dp"
                    android:visibility="gone"
                    android:src="@mipmap/product_item_buy" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>